/* pages/maifangchuzu/maifangchuzu.wxss */
.warp{
  padding:0 29rpx;
}
.phone{
  margin-bottom:48rpx;
}
.phone text{
  font-size: 28rpx;
}
.phone .title{
  margin-bottom:26rpx;
}
.phone text:nth-child(1){
  margin-right:8rpx;
}
.phone text:nth-child(2){
 color: #ff0000;
}
.phone input{
  /* width:646rpx; */
  height: 84rpx;
  border:2rpx solid #020202;
  border-radius:8rpx;
  font-size: 24rpx;
  padding: 0 20rpx;
}
.chenghubox .chenghuinput{
  position: relative;
}
.chenghubox input{
  padding-right:210rpx;
}
.chenghubox .chenghu{
  position: absolute;
  right:20rpx;
  top:17rpx;

}
.chenghubox .chenghu text{
  padding:0 20rpx;
  color: #bababa;
}
.chenghubox .chenghu text.active{
  color: #c2a875;
}
.chenghubox .chenghu text:nth-child(1){
  border-right:1rpx solid #b8b8b8;
  
}
.price{
  display: flex;
  justify-content: space-between;
}
.price input{
  width:290rpx;
}
.price .yuan{
  position: relative;

}
.price .yuan input{
    width:260rpx;
  padding-right:50rpx;
}
.price .yuan text{
  position: absolute;
  right:20rpx;
  top:25rpx;
  color:#0d0d0d;
}
.price .selectitem .picker{
  width:290rpx;
  padding:0 20rpx;
    border:2rpx solid #020202;
  border-radius:8rpx;
   height: 84rpx;
   line-height: 84rpx;
   font-size: 24rpx;
   position: relative;
}
.price .selectitem image{
  width:14rpx;
  position: absolute;
  right:20rpx;
  top:40rpx;
  height: 14rpx;

}
.subbtn button{
  height: 108rpx;
  background: linear-gradient(to right,#c8ab78,#c9ac79);
  line-height: 108rpx;
  font-size: 32rpx;
  color: #fff;
}
.subbtn{
  margin-bottom:58rpx;
}

.guwen .gw-title{
  font-size: 34rpx;
  font-weight: bold;
  color: #222;
  line-height: 120rpx;
}
.guwen .guwencard{
  /* height: 160rpx; */
  box-shadow: 0 0 40rpx 0rpx rgba(0,0,0,0.1);
  margin-bottom:50rpx;
  border-radius: 10rpx;
   padding:30rpx;
   display: flex;
   justify-content: flex-start;
   align-items: center;
   position: relative;
}
.guwen .guwencard .left{
  width:120rpx;
  margin-right:28rpx;
}
.guwen .guwencard .left image{
width:100%;

}
.guwen .guwencard .right view:nth-child(1){
  font-size: 32rpx;
  color: #242424;
  font-weight: bold;
}
.guwen .guwencard .right view:nth-child(1) image{
  width:40rpx;
  margin-left:10rpx;
  vertical-align: middle;
}
.guwen .guwencard .right view:nth-child(2){
  font-size: 24rpx;
  color: #b5b5b5;
  line-height: 80rpx;
}
.guwen .guwencard .right view:nth-child(3){
  font-size: 26rpx;
  color: #101010;
  font-weight: bold;
}
.guwen .guwencard .position-icon{
  position: absolute;
  right:30rpx;
  top:30rpx;
}
.guwen .guwencard .position-icon image{
  width:45rpx;
}
.guwen .guwencard .position-icon image:nth-child(1){
 margin-right:43rpx;
}
.guwen .bgimage{
  width:546rpx;
  margin:0 auto;
  padding:50rpx 0;
}
.guwen .bgimage image{
  width:100%;
}
.pop-warp{
  width:100%;
  height: 100%;
  background:rgba(0,0,0,0.1);
  position: fixed;
  left:0;
  top:0;
  z-index: 99;
}
.pop-warp .pop-box{
  width:600rpx;
  height: 300rpx;
  position:absolute;
  left:0;
  right:0;
  bottom:0;
  top:0;
  margin:auto;
}
.pop-warp .pop-box image{
  width:100%;
  position:absolute;
  left:0;
  top:0;
}
.pop-warp .pop-box>view{
  position: absolute;
  width:100%;
  text-align: center;
  color: #cab681;
  padding-top:70rpx;
}
.pop-warp .pop-box .p-title{
  font-size: 42rpx;
  font-weight: bold;
  margin-bottom:40rpx;
}
.pop-warp .pop-box .p-con{
  font-size: 28rpx;
}











.backToindex{
	position:fixed;
	right:40rpx;
	bottom:150rpx;
	background-color:#ffffff;
	width:100rpx;
	height:100rpx;
	border-radius:50px;
	line-height:100rpx;
	text-align:center;
	color:#000000;
	font-size:24rpx;
	z-index:999;
	box-shadow:0px 0px 5px 0px #000000;
}