<wxs src="../../wxs/tools.wxs" module="tools" />


<view class="flex-between top">
  <view class="flex">
    <image src='{{myInfo.image}}' wx:if="{{myInfo.image}}"></image>
    <image src='../../assets/img/tuxiang.png' wx:else></image>

    <view class="name">{{myInfo.storeName?myInfo.storeName:''}}{{myInfo.name?'-'+myInfo.name:''}}</view>
  </view>
  <view class="red">业绩排名 : {{myInfo.rank?'第'+myInfo.rank+'名':'暂无排名'}}</view>
  </view>

<view class="card"  style="background-image: url('../../assets/img/bg.png'); background-size: cover;background-repeat: no-repeat;">
  <image src="../../assets/img/up.png" class="up"></image>
  <view>
    <view class="name">本月签约业绩</view>
    <view class="money">
      <text>{{myInfo.monthAchievement?tools.toFixed(myInfo.monthAchievement,2):'-'}}</text>万</view>
    <view class="last">{{myInfo.lastAchievement?tools.toFixed(myInfo.lastAchievement,2):'-'}}万(上月)</view>
  </view>
  <view class="yeji">
    <view>
      <text space="ensp">● 新房  {{myInfo.newAchievement?tools.toFixed(myInfo.newAchievement,2):'-'}}万</text>
    </view>
    <view>
      <text space="ensp">● 二手  {{myInfo.sellAchievement?tools.toFixed(myInfo.sellAchievement,2):'-'}}万</text>
    </view>
    <view>
      <text space="ensp">● 租赁  {{myInfo.rentAchievement?tools.toFixed(myInfo.rentAchievement,2):'-'}}万</text>
    </view>
  </view>

</view>

<van-grid column-num="4" border="{{ false }}">
  <van-grid-item use-slot wx:for="{{ list }}" wx:key="index" class="grid" bindtap="goBuild" data-index="{{index}}">
    <image src="{{item.src}}" class="iconBox"></image>
    <view style="font-size:29rpx;">{{item.text}}</view>
  </van-grid-item>
</van-grid>

<view class="bobao flex">
  <view class="border-r">
    <image src="../../assets/img/bobao.png"></image>
  </view>
  <view class="person">
    <image src="{{bobaoInfo.image}}"></image>
    <view>{{bobaoInfo.name?bobaoInfo.name:'暂无'}}</view>
  </view>
  <view class="info">{{bobaoInfo.context}}
  </view>
</view>

<view class="msg-center">
<view class="title"><image src="../../assets/img/laba.png"></image>消息中心</view>

<block wx:for="{{infoList}}" wx:key="*this">
<view class="msg-item">
  <view class="msg-title">{{item.context}}</view>
  <view class="flex-between item">
    <view class="msg1">{{item.type}}</view>
    <view class="time">{{item.date}}</view>
  </view>
</view>
</block>
</view>