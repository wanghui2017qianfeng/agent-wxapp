<view class="box">
  <view class="login-item flex">
    <image src="../../assets/img/shouji.png"></image>
    <input value="{{userName}}" placeholder="请输入手机号码" bindinput="inputPhone"></input>
  </view>
  <view class="login-item flex">
    <image src="../../assets/img/password.png"></image>
    <input type="password" value="{{password}}" placeholder="请输入密码" bindinput="inputPassword"></input>
  </view>
  <button class="login-btn" open-type='getUserInfo' bindgetuserinfo="goLogin">
    <!-- <view class="login-btn"> -->
      登录
    <!-- </view> -->
  </button>
  <view class="msg">与租售系统登录账号和密码一致</view>

</view>