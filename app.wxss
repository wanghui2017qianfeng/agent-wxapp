.fixed-tab {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  height: 100rpx;
  line-height: 100rpx;
  display: flex;
  background: #fff;
}

.fixed-tab .tab-item {
  flex: 1;
  font-size: 34rpx;
  text-align: center;
}

.fixed-tab .tab-item view {
  margin: 0 50rpx;
}

.fixed-tab .active-tab view {
  color: #2f72f7;
  font-weight: 700;
  border-bottom: 5rpx solid #2f72f7;
}
