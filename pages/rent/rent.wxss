.menu-item {
  position: relative;
  padding: 0 8px;
}

.menu-item::after {
  position: absolute;
  top: 50%;
  right: -4px;
  margin-top: -5px;
  border-color: transparent transparent #333 #333;
  border-style: solid;
  border-width: 3px;
  -webkit-transform: rotate(-45deg);
  transform: rotate(-45deg);
  opacity: 0.8;
  content: "";
}

.menu-item:last-child::after{
  display: none;
  border:none!important;
  border-color:transparent;
}

.menuActive {
  color: #2F72F7;
}

.menuActive::after {
  border-color: transparent transparent #2F72F7 #2F72F7;
}

